@model TicketBus.Models.Voyage

@{
    ViewBag.Title = "Select Voyage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SelectVoyage</h2>

@using (Html.BeginForm())
{
    <div class="row">
        <h2>Voyage selection</h2>
        <div class="col-md-3">
            <p>Departure bus stop</p>
            <div class="">
                <input class="form-control" type="text" size="40">
            </div>
        </div>
        <div class="col-md-3">
            <p>Arrival bus stop</p>
            <div class="">
                <input class="form-control" type="text" size="40">
            </div>
        </div>
        <div class="col-md-3">
            <p>Departure date</p>
            <div class="">
                <input class="form-control date-picker" type="text" size="40">
            </div>
        </div>
    </div>
    <div class="">
        <input type="submit" class="btn btn-default" value="Submit"/>
    </div>
}

